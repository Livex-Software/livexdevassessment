@using LivexDevTechnicalAssessment.Entities.Models

@model Inventory

@{
    ViewData["Title"] = "Edit Inventory";
}
<h1>@ViewData["Title"]</h1>

<form id="edit_form" action="/Inventory/Update" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model=> Model.InventoryId)
    <div class="form-group mb-3">
        <label for="InventoryName">Inventory Name</label>
        <input type="text" class="form-control" id="InventoryName" name="InventoryName" value="@Model.InventoryName" placeholder="Enter inventory name">
    </div>
    <div class="form-group mb-3">
        <label for="Sku">SKU</label>
        <input type="text" class="form-control" value="@Model.Sku" id="Sku" name="Sku" placeholder="11A-rt">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick=" location.href = '@Url.Action("Index", "Home")';" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</form>