@using LivexDevTechnicalAssessment.Entities.Models

@model Customer

@{
    ViewData["Title"] = "Add Customer";
}
<h1>@ViewData["Title"]</h1>

<form id="add_customer_form" action="/Customer/Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group mb-3">
        <label for="InventoryName">Customer Name</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter customer name">
    </div>
    <div class="form-group mb-3">
        <label for="Sku">Email Address</label>
        <input type="text" class="form-control" id="emailAddress" name="emailAddress" placeholder="example@mail.com">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick=" location.href = '@Url.Action("Index", "Customer")';" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</form>