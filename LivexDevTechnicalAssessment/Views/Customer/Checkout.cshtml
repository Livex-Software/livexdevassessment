@using LivexDevTechnicalAssessment.Entities.ViewModels

@model IEnumerable<CheckoutModel>

@{
    ViewData["Title"] = "Checkout Inventory";
}
<h1>@ViewData["Title"]</h1>

<form id="edit_form" action="/Customer/CreateCustomerInventory" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model=> Model.First().CustomerId)

    @foreach(var item in Model)
    {
        <div class="form-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@item.Inventories!.InventoryId" id="InventoryIdList[]" name="InventoryIdList[]">
                <label class="form-check-label" for="InventoryId">
                    @item.Inventories!.InventoryName
                </label>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" onclick=" location.href = '@Url.Action("Index", "Customer")';" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</form>