@using LivexDevTechnicalAssessment.Entities.Models

@*Our corresponding model that was returned*@
@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customer Page";
    int count = 1;
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Customer List</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email Address</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.EmailAddress</td>
                                    <td>
                                        <i class='bx bxs-cart-add bx-md edit' onclick="action('Checkout', 'Customer', '@item.CustomerId')">
                                        </i>
                                    </td>
                                </tr>
                                ++count;
                            }
                        }
                        else
                        {
                            <text>
                                No data available
                            </text>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<button type="button" class="btn btn-primary btn-md mt-3" onclick="location.href='@Url.Action("Add", "Customer")'" id="load1">Add +</button>